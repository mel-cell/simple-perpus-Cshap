<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:pr.ViewModels"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
             x:Class="pr.Views.LoginView"
             x:DataType="vm:LoginViewModel"
             Background="White">
  <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="20" Margin="20" Background="White">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
      <TextBlock Text="Login" FontSize="24" HorizontalAlignment="Center" Foreground="Black" />

      <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="3">
        <TextBox Text="{Binding Username}" Watermark="Username" Foreground="Black" Background="White" BorderThickness="0" Padding="5" />
      </Border>
      <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="3">
        <TextBox Text="{Binding Password}" Watermark="Password" PasswordChar="*" Foreground="Black" Background="White" BorderThickness="0" Padding="5" />
      </Border>

      <Button Content="Login" Command="{Binding LoginCommand}" Foreground="Black" Background="LightBlue" BorderThickness="0" Padding="10" CornerRadius="3">
        <Button.Styles>
          <Style Selector="Button:pointerover">
            <Setter Property="Background" Value="LightSkyBlue" />
          </Style>
        </Button.Styles>
      </Button>
      <Button Content="Cancel" Command="{Binding CancelCommand}" Foreground="Black" Background="LightGray" BorderThickness="0" Padding="10" CornerRadius="3">
        <Button.Styles>
          <Style Selector="Button:pointerover">
            <Setter Property="Background" Value="Gray" />
          </Style>
        </Button.Styles>
      </Button>

      <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" HorizontalAlignment="Center" />

      <Button Content="Belum punya akun? Daftar" Command="{Binding NavigateToRegisterCommand}" Foreground="Blue" Background="Transparent" BorderThickness="0" Padding="5">
        <Button.Styles>
          <Style Selector="Button:pointerover">
            <Setter Property="Foreground" Value="DarkBlue" />
          </Style>
        </Button.Styles>
      </Button>
    </StackPanel>
  </Border>
</UserControl>
