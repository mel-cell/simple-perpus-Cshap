<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:pr.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="pr.Views.PeminjamanView"
             x:DataType="vm:PeminjamanViewModel"
             Background="White">
  <Grid ColumnDefinitions="350,*">
    <Border Grid.Column="0" Background="LightGray" Margin="10" CornerRadius="5">
      <StackPanel Margin="15">
        <TextBlock Text="Form Peminjaman" FontSize="18" FontWeight="Bold" Margin="0,0,0,15" Foreground="Black" />

        <TextBlock Text="Pilih Siswa:" Margin="0,0,0,5" Foreground="Black" />
        <ComboBox ItemsSource="{Binding SiswaList}"
                  SelectedItem="{Binding SelectedSiswa}"
                  DisplayMemberBinding="{Binding SiswaNama}"
                  Margin="0,0,0,10" />

        <TextBlock Text="Pilih Buku:" Margin="0,0,0,5" Foreground="Black" />
        <ComboBox ItemsSource="{Binding BukuList}"
                  SelectedItem="{Binding SelectedBuku}"
                  DisplayMemberBinding="{Binding BukuJudul}"
                  Margin="0,0,0,10" />

        <TextBlock Text="Tanggal Pinjam:" Margin="0,0,0,5" Foreground="Black" />
        <DatePicker SelectedDate="{Binding TanggalPinjam}" Margin="0,0,0,10" />

        <TextBlock Text="Tanggal Kembali:" Margin="0,0,0,5" Foreground="Black" />
        <DatePicker SelectedDate="{Binding TanggalKembali}" Margin="0,0,0,20" />

        <Button Content="Simpan Peminjaman" Command="{Binding SimpanPeminjamanCommand}" Background="Green" Foreground="White" />
      </StackPanel>
    </Border>

    <Border Grid.Column="1" Background="White" Margin="10" CornerRadius="5" BorderBrush="LightGray" BorderThickness="1">
      <StackPanel Margin="15">
        <TextBlock Text="Data Peminjaman" FontSize="18" FontWeight="Bold" Margin="0,0,0,15" Foreground="Black" />

        <TextBox Text="{Binding SearchText}" Watermark="Cari peminjaman..." Margin="0,0,0,15" />

        <DataGrid ItemsSource="{Binding PeminjamanList}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  GridLinesVisibility="All"
                  BorderBrush="Gray"
                  BorderThickness="1">
          <DataGrid.Columns>
            <DataGridTextColumn Header="ID" Binding="{Binding PeminjamanId}" Width="100" Foreground="Black" />
            <DataGridTextColumn Header="User ID" Binding="{Binding UserId}" Width="100" Foreground="Black" />
            <DataGridTextColumn Header="Buku ID" Binding="{Binding BukuId}" Width="100" Foreground="Black" />
            <DataGridTextColumn Header="Tanggal Pinjam" Binding="{Binding TanggalPinjam, StringFormat=d}" Width="120" Foreground="Black" />
            <DataGridTextColumn Header="Tanggal Kembali" Binding="{Binding TanggalKembali, StringFormat=d}" Width="120" Foreground="Black" />
            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100" Foreground="Black" />
            <DataGridTemplateColumn Header="Actions" Width="120">
              <DataGridTemplateColumn.CellTemplate>
                <DataTemplate>
                  <StackPanel Orientation="Horizontal">
                    <Button Content="Update" Command="{Binding DataContext.UpdatePeminjamanCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" CommandParameter="{Binding}" Margin="0,0,5,0" Background="Blue" Foreground="White" />
                    <Button Content="Delete" Command="{Binding DataContext.DeletePeminjamanCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" CommandParameter="{Binding}" Background="Red" Foreground="White" />
                  </StackPanel>
                </DataTemplate>
              </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
          </DataGrid.Columns>
        </DataGrid>
      </StackPanel>
    </Border>
  </Grid>
</UserControl>
